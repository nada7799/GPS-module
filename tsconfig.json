{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./src",  // Source files are in the 'src' folder
      "outDir": "./dist",  // Compiled JavaScript files go to the 'dist' folder
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts" // Include all TypeScript files in the 'src' folder
    ],
    "exclude": [
      "node_modules" // Exclude 'node_modules' folder
    ]
  }
  